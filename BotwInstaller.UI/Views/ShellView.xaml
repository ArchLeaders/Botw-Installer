<Window x:Class="BotwInstaller.UI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BotwInstaller.UI.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="https://github.com/canton7/Stylet"
        x:Name="shellView"
        Title="Botw Installer"
        Height="450"
        MaxWidth="750"
        Background="{DynamicResource PrimaryHueDarkBrush}"
        FontFamily="Calibri"
        FontSize="20"
        FontWeight="Bold"
        RenderOptions.BitmapScalingMode="HighQuality"
        ResizeMode="CanMinimize"
        Style="{StaticResource MaterialDesignWindow}"
        TextOptions.TextFormattingMode="Display"
        mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30" />
    </WindowChrome.WindowChrome>

    <Grid x:Name="parentGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>

        <Border Background="{DynamicResource PrimaryHueMidBrush}" />

        <!--#region Window Chrome-->

        <TextBlock Margin="30,0,0,0"
                   VerticalAlignment="Center"
                   FontFamily="Calibri"
                   FontSize="18"
                   FontWeight="Bold"
                   Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                   Text="Botw Installer"
                   TextOptions.TextFormattingMode="Display" />
        <StackPanel HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    WindowChrome.IsHitTestVisibleInChrome="True">
            <Button Width="45"
                    Height="30"
                    Padding="0"
                    Click="{s:Action SwitchTheme}"
                    Content="◓"
                    FontSize="20"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Style="{StaticResource MaterialDesignFlatButton}" />
            <Button x:Name="homeBtnWindowMin"
                    Width="45"
                    Height="30"
                    Padding="0"
                    Content="-"
                    FontFamily="{StaticResource Windows}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Style="{StaticResource MaterialDesignFlatAccentButton}" />
            <Button x:Name="homeBtnWindowSize"
                    Width="45"
                    Height="30"
                    Padding="0"
                    Content=" "
                    FontFamily="{StaticResource Windows}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    IsEnabled="False"
                    Style="{StaticResource MaterialDesignFlatAccentButton}" />
            <Button x:Name="homeBtnWindowExit"
                    Width="45"
                    Height="30"
                    Padding="0"
                    Content="!"
                    FontFamily="{StaticResource Windows}"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Style="{StaticResource MaterialDesignFlatAccentButton}" />
        </StackPanel>

        <Image Margin="5,5,0,5"
               HorizontalAlignment="Left"
               RenderOptions.BitmapScalingMode="HighQuality"
               Source="/ViewThemes/Icons/app.png" />

        <!--#endregion-->

        <!--#region Tabs-->

        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <RadioButton x:Name="btnBasicTab"
                         Width="140"
                         Height="36"
                         Margin="25,0"
                         VerticalAlignment="Top"
                         Content="Basic"
                         FontFamily="Calibri"
                         FontSize="22"
                         FontWeight="Bold"
                         IsChecked="True"
                         Style="{DynamicResource TabButtonStyle}"
                         ToolTip="Configure The Basic Install Options" />

            <RadioButton x:Name="btnLnkTab"
                         Width="140"
                         Height="36"
                         Margin="25,0"
                         VerticalAlignment="Top"
                         Content="Shortcuts"
                         FontFamily="Calibri"
                         FontSize="22"
                         FontWeight="Bold"
                         Style="{DynamicResource TabButtonStyle}"
                         ToolTip="Configure Shortcuts" />

            <RadioButton x:Name="btnAdvTab"
                         Width="140"
                         Height="36"
                         Margin="25,0"
                         VerticalAlignment="Top"
                         Content="Advanced"
                         FontFamily="Calibri"
                         FontSize="22"
                         FontWeight="Bold"
                         Style="{DynamicResource TabButtonStyle}"
                         ToolTip="Configure The Advanced Install Options" />
        </StackPanel>

        <!--#endregion-->

        <!--#region Basic Tab XAML-->

        <Grid x:Name="gridBasicTab"
              Grid.Row="3"
              Margin="20"
              VerticalAlignment="Top"
              Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="230" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1">
                <CheckBox x:Name="cbConfigBasic_Mods"
                          Content="Use Mods"
                          FontSize="25"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          ToolTip="Installs the required software&#x0a;to use mods with Cemu." />
                <CheckBox x:Name="cbConfigBasic_Shortcuts"
                          Content="Basic Shortcuts"
                          FontSize="25"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          ToolTip="Enables basic shortcut creaton.&#x0a;Choose exactly wich ones you want&#x0a;in the Shortcuts tab." />
                <CheckBox x:Name="cbBasic_InstallDs4Windows"
                          Content="DS4Windows"
                          FontSize="25"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          ToolTip="Install DS4Windows.&#x0a;Required if you use a Dualshock controler," />
                <CheckBox x:Name="cbBasic_InstallBetterJoy"
                          Content="BetterJoy"
                          FontSize="25"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          ToolTip="Install BetterJoy.&#x0a;Required if you use a Switch controler," />
                <CheckBox x:Name="cbBasic_RunAfterInstall"
                          Content="Run After Install"
                          FontSize="25"
                          Style="{StaticResource MaterialDesignCheckBox}"
                          ToolTip="Runs Botw, BetterJoy, and DS4Windows once (if) installed." />
            </StackPanel>
            <Grid Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <TextBlock Width="150"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Noto Sans Mono"
                               FontWeight="Bold"
                               Text="Path to Cemu:" />
                    <TextBox x:Name="tbBasic_CemuPath"
                             Margin="150,5,60,5"
                             Padding="5,8"
                             Style="{StaticResource Filled}" />
                    <Button x:Name="ocBrowseCemu"
                            Width="50"
                            Height="40"
                            Padding="2,0,0,0"
                            HorizontalAlignment="Right"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Top"
                            Style="{StaticResource Global}">
                        <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              Fill="{DynamicResource MaterialDesignBody}"
                              StrokeThickness="0.0372541">
                            <Path.Data>
                                <PathGeometry Figures="m 9.070066 6.7379049 c -1.2549167 0 -2.2936247 1.0387858 -2.2936247 2.2937024 V 29.468892 c 0 2.083103 1.7101006 3.793203 3.7932037 3.793203 h 1.747415 4.861913 15.494112 c 2.407299 0 4.612645 -1.364117 5.687621 -3.51807 l 4.637004 -9.291243 c 0.722365 -1.447417 -0.380399 -3.230305 -1.998061 -3.230305 H 19.325674 c -1.599633 0 -3.066802 0.907491 -3.781116 2.338778 l -4.51909 9.055103 c -0.180657 0.386692 -0.370681 0.544666 -0.530923 0.619904 -0.165449 0.07768 -0.340262 0.0898 -0.5675771 0.01981 C 9.4860669 29.120311 8.9424757 28.600284 8.7728641 27.860369 V 9.0316073 c 0 -0.1759708 0.1212311 -0.2972798 0.2972019 -0.2972798 h 9.265272 c 0.75852 0 1.498445 0.2326452 2.120499 0.6666961 l 4.248949 2.9647654 c 1.018405 0.710613 2.230627 1.091793 3.472449 1.091793 h 8.955282 c 0.14604 0 0.24308 0.09696 0.24308 0.243003 v 0.965301 a 0.99821131 0.99821131 0 0 0 0.998211 0.998212 0.99821131 0.99821131 0 0 0 0.998211 -0.998212 v -0.965301 c 0 -1.224987 -1.014516 -2.239424 -2.239502 -2.239425 h -8.955282 c -0.833448 1e-6 -1.64654 -0.255665 -2.330043 -0.732593 L 21.598242 7.763801 C 20.641286 7.0960655 19.502231 6.7379049 18.335338 6.7379049 Z" FillRule="NonZero" />
                            </Path.Data>
                        </Path>
                    </Button>

                </Grid>
                <Grid Grid.Row="1">
                    <TextBlock Width="150"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontFamily="Noto Sans Mono"
                               FontWeight="Bold"
                               Text="Path to Botw:" />
                    <TextBox x:Name="tbBasic_BotwPath"
                             Margin="150,5,60,5"
                             Padding="5,8"
                             Style="{StaticResource Filled}" />
                    <Button x:Name="ocBrowseBotw"
                            Width="50"
                            Height="40"
                            Padding="2,0,0,0"
                            HorizontalAlignment="Right"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Top"
                            Style="{StaticResource Global}">
                        <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              Fill="{DynamicResource MaterialDesignBody}"
                              StrokeThickness="0.0372541">
                            <Path.Data>
                                <PathGeometry Figures="m 9.070066 6.7379049 c -1.2549167 0 -2.2936247 1.0387858 -2.2936247 2.2937024 V 29.468892 c 0 2.083103 1.7101006 3.793203 3.7932037 3.793203 h 1.747415 4.861913 15.494112 c 2.407299 0 4.612645 -1.364117 5.687621 -3.51807 l 4.637004 -9.291243 c 0.722365 -1.447417 -0.380399 -3.230305 -1.998061 -3.230305 H 19.325674 c -1.599633 0 -3.066802 0.907491 -3.781116 2.338778 l -4.51909 9.055103 c -0.180657 0.386692 -0.370681 0.544666 -0.530923 0.619904 -0.165449 0.07768 -0.340262 0.0898 -0.5675771 0.01981 C 9.4860669 29.120311 8.9424757 28.600284 8.7728641 27.860369 V 9.0316073 c 0 -0.1759708 0.1212311 -0.2972798 0.2972019 -0.2972798 h 9.265272 c 0.75852 0 1.498445 0.2326452 2.120499 0.6666961 l 4.248949 2.9647654 c 1.018405 0.710613 2.230627 1.091793 3.472449 1.091793 h 8.955282 c 0.14604 0 0.24308 0.09696 0.24308 0.243003 v 0.965301 a 0.99821131 0.99821131 0 0 0 0.998211 0.998212 0.99821131 0.99821131 0 0 0 0.998211 -0.998212 v -0.965301 c 0 -1.224987 -1.014516 -2.239424 -2.239502 -2.239425 h -8.955282 c -0.833448 1e-6 -1.64654 -0.255665 -2.330043 -0.732593 L 21.598242 7.763801 C 20.641286 7.0960655 19.502231 6.7379049 18.335338 6.7379049 Z" FillRule="NonZero" />
                            </Path.Data>
                        </Path>
                    </Button>

                </Grid>
                <Grid Grid.Row="2" Margin="0,5,0,0">
                    <Border Margin="0,3,0,5"
                            BorderBrush="{DynamicResource SecondaryHueLightBrush}"
                            BorderThickness="2"
                            CornerRadius="5">
                        <StackPanel Margin="0,0,0,0"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal">

                            <!--  Check Box: 'Standard Layout' | Name: cbBasicCtrl_Standard | Done  -->
                            <CheckBox x:Name="cbBasicCtrl_Standard"
                                      Width="91"
                                      Height="91"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      ToolTip="Check any profiles you wish to be installed. (At least one required to play Botw.)">
                                <Image RenderOptions.BitmapScalingMode="HighQuality" Source="../ViewThemes/Icons/ctrl_jp.png" />
                            </CheckBox>

                            <!--  Check Box: 'Western Layout' | Name: cbBasicCtrl_Western | Done  -->
                            <CheckBox x:Name="cbBasicCtrl_Western"
                                      Width="91"
                                      Height="91"
                                      Margin="40,0"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      ToolTip="Check any profiles you wish to be installed. (At least one required to play Botw.)">
                                <Image RenderOptions.BitmapScalingMode="HighQuality" Source="../ViewThemes/Icons/ctrl_we.png" />
                            </CheckBox>

                            <!--  Check Box: 'PE Layout' | Name: cbBasicCtrl_Pe | Done  -->
                            <CheckBox x:Name="cbBasicCtrl_Pe"
                                      Width="91"
                                      Height="91"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      ToolTip="Check any profiles you wish to be installed. (At least one required to play Botw.)">
                                <Image RenderOptions.BitmapScalingMode="HighQuality" Source="../ViewThemes/Icons/ctrl_pe.png" />
                            </CheckBox>
                        </StackPanel>
                    </Border>
                    <TextBlock Height="15"
                               Margin="13,-5,0,0"
                               Padding="5,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Background="{DynamicResource PrimaryHueDarkBrush}"
                               FontSize="14"
                               Foreground="{DynamicResource SecondaryHueLightBrush}"
                               Text="Controler Profiles" />
                </Grid>
            </Grid>
        </Grid>

        <!--#endregion-->

        <!--#region Shortcut Tab XAML-->

        <Grid x:Name="gridLnkTab"
              Grid.Row="3"
              Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="55,15">
                <TextBlock Margin="10"
                           HorizontalAlignment="Center"
                           Text="- Desktop -" />

                <!--  Start Menu Shortcut for BetterJoy  -->
                <CheckBox x:Name="cbLnkDsk_BetterJoy"
                          Content="BetterJoy"
                          Style="{StaticResource MaterialDesignCheckBox}" />

                <!--  Start Menu Shortcut for BCML  -->
                <CheckBox x:Name="cbLnkDsk_Bcml"
                          Content="BCML"
                          Style="{StaticResource MaterialDesignCheckBox}" />

                <!--  Start Menu Shortcut for BettBotWerJoy  -->
                <CheckBox x:Name="cbLnkDsk_Botw"
                          Content="BotW"
                          Style="{StaticResource MaterialDesignCheckBox}" />

                <!--  Start Menu Shortcut for Cemu  -->
                <CheckBox x:Name="cbLnkDsk_Cemu"
                          Content="Cemu"
                          Style="{StaticResource MaterialDesignCheckBox}" />

                <!--  Start Menu Shortcut for DS4Windows  -->
                <CheckBox x:Name="cbLnkDsk_DS4Windows"
                          Content="DS4Windows"
                          Style="{StaticResource MaterialDesignCheckBox}" />
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="55,15">
                <TextBlock Margin="10"
                           HorizontalAlignment="Center"
                           Text="- Start Menu -" />

                <!--  Start Menu Shortcut for BetterJoy  -->
                <CheckBox x:Name="cbLnkSrt_BetterJoy"
                          Content="BetterJoy"
                          Style="{StaticResource MaterialDesignCheckBox}" />

                <!--  Start Menu Shortcut for BCML  -->
                <CheckBox x:Name="cbLnkSrt_Bcml"
                          Content="BCML"
                          Style="{StaticResource MaterialDesignCheckBox}" />

                <!--  Start Menu Shortcut for BettBotWerJoy  -->
                <CheckBox x:Name="cbLnkSrt_Botw"
                          Content="BotW"
                          Style="{StaticResource MaterialDesignCheckBox}" />

                <!--  Start Menu Shortcut for Cemu  -->
                <CheckBox x:Name="cbLnkSrt_Cemu"
                          Content="Cemu"
                          Style="{StaticResource MaterialDesignCheckBox}" />

                <!--  Start Menu Shortcut for DS4Windows  -->
                <CheckBox x:Name="cbLnkSrt_DS4Windows"
                          Content="DS4Windows"
                          Style="{StaticResource MaterialDesignCheckBox}" />
            </StackPanel>
        </Grid>

        <!--#endregion-->

        <!--#region Advanced Tab XAML-->

        <Grid x:Name="gridAdvTab"
              Grid.Row="3"
              Margin="25,0,0,0"
              Visibility="Hidden">
            <Grid x:Name="pageOne" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="270" MaxWidth="270" />
                    <ColumnDefinition MinWidth="265" MaxWidth="250" />
                    <ColumnDefinition MaxWidth="160" />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="0,15,15,0">
                    <Border Margin="0,0,0,0"
                            BorderBrush="{DynamicResource SecondaryHueLightBrush}"
                            BorderThickness="2"
                            CornerRadius="5">
                        <StackPanel Margin="12,6">
                            <TextBlock Margin="3,-15,0,0"
                                       Padding="5,0"
                                       HorizontalAlignment="Left"
                                       Background="{DynamicResource PrimaryHueDarkBrush}"
                                       FontSize="14"
                                       Foreground="{DynamicResource SecondaryHueLightBrush}"
                                       Text="Python" />

                            <!--  Check Box: 'Install Python' | Name: cbAdv_PyDocs | Done  -->
                            <CheckBox x:Name="cbAdv_InstallPython"
                                      Margin="0,5"
                                      Content="Install Python"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      ToolTip="Installs Python.&#x0a;This is required for BCML and many other modding tools." />

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.4*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <!--  Check Box: 'Py Docs' | Name: cbAdv_PyDocs | Done  -->
                                <CheckBox x:Name="cbAdv_PyDocs"
                                          Margin="0,0,5,0"
                                          Content="Py Docs"
                                          Style="{StaticResource MaterialDesignCheckBox}"
                                          ToolTip="Installs The Python Documentation.&#x0a;Recomended if you plan on coding with python." />

                                <!--  Combo Box: 'Python Version' | Name: cbAdv_PyVersion | Done  -->
                                <ComboBox x:Name="cbAdv_PyVersion"
                                          Grid.Column="1"
                                          Margin="5,0,0,0"
                                          Padding="6,3.5"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                          ToolTip="The version of python to be installed.">
                                    <ComboBoxItem Content="3.8.10" IsSelected="True" />
                                    <ComboBoxItem Content="3.7.8" />
                                </ComboBox>
                            </Grid>

                            <!--  Text Box: 'Python Path' | Name: tbAdv_PythonPath | Done  -->
                            <TextBox x:Name="tbAdv_PythonPath"
                                     Margin="0,5"
                                     VerticalAlignment="Center"
                                     Style="{StaticResource Filled}"
                                     Text="C:\Python"
                                     ToolTip="Path To Python Installation.&#x0a;&#x0a;Ctrl + Double click to browse." />
                        </StackPanel>
                    </Border>
                    <Border Margin="0,15,0,0"
                            BorderBrush="{DynamicResource SecondaryHueLightBrush}"
                            BorderThickness="2"
                            CornerRadius="5">
                        <StackPanel Margin="12,6">
                            <TextBlock Margin="3,-15,0,0"
                                       Padding="5,0"
                                       HorizontalAlignment="Left"
                                       Background="{DynamicResource PrimaryHueDarkBrush}"
                                       FontSize="14"
                                       Foreground="{DynamicResource SecondaryHueLightBrush}"
                                       Text="BCML" />

                            <!--  Check Box: 'BCML' | Name: cbAdv_InstallBcml | Done  -->
                            <CheckBox x:Name="cbAdv_InstallBcml"
                                      Content="Install BCML"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      ToolTip="Install BCML with PIP.&#x0a;Requires Python, WebView Runtime,&#x0a;and Visual C++ Runtime." />

                            <!--  Text Box: 'BCML Data Path' | Name: tbAdv_BcmlData | Done  -->
                            <TextBox x:Name="tbAdv_BcmlData"
                                     Margin="5"
                                     VerticalAlignment="Center"
                                     Style="{StaticResource Filled}"
                                     Text="%localappdata%\bcml"
                                     ToolTip="Path to BCML Data.&#x0a;This is where BCML will store your mods.&#x0a;&#x0a;Ctrl + Double click to browse." />

                            <!--  Check Box: 'Install .NET Runtime' | Name: cbAdv_NetRuntime | Done  -->
                            <CheckBox x:Name="_cbAdv_NetRuntime"
                                      Content=".NET 5.0 Runtime"
                                      IsEnabled="False"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      ToolTip="Installs .NET 5.0 Runtime.&#x0a;Required to run DS4Windows."
                                      Visibility="Collapsed" />

                            <!--  Check Box: 'Install WebView 2 Runtime Runtime' | Name: cbAdv_NetRuntime | Done  -->
                            <CheckBox x:Name="_cbAdv_WebviewRuntime"
                                      Content="WebView 2 Runtime"
                                      IsEnabled="False"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      ToolTip="Installs WebView 2 Runtime.&#x0a;Required to run BCML."
                                      Visibility="Collapsed" />

                            <!--  Check Box: 'Install Visual C++ Runtime' | Name: cbAdv_VisualRuntime | Done  -->
                            <CheckBox x:Name="_cbAdv_VisualRuntime"
                                      Content="Visual C++ Runtime"
                                      IsEnabled="False"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      ToolTip="Installs Visual C++ Runtime.&#x0a;Required to run BCML and Cemu."
                                      Visibility="Collapsed" />
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,0">
                    <Border Margin="0,15,0,0"
                            BorderBrush="{DynamicResource SecondaryHueLightBrush}"
                            BorderThickness="2"
                            CornerRadius="5">
                        <StackPanel Margin="12,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MaxWidth="80" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Margin="3,-15,0,0"
                                               Padding="5,0"
                                               HorizontalAlignment="Left"
                                               Background="{DynamicResource PrimaryHueDarkBrush}"
                                               FontSize="14"
                                               Foreground="{DynamicResource SecondaryHueLightBrush}"
                                               Text="Cemu" />

                                    <!--  Check Box: 'Install Cemu' | Name: cbAdv_InstallCemu | Done  -->
                                    <CheckBox x:Name="cbAdv_InstallCemu"
                                              Margin="0,5"
                                              Content="Cemu"
                                              Style="{StaticResource MaterialDesignCheckBox}"
                                              ToolTip="Downloads and install Cemu to&#x0a;the specified folder.&#x0a;Installs BotW if not already installed." />

                                    <!--  Check Box: 'Install GFX' | Name: cbAdv_InstallGfx | Done  -->
                                    <CheckBox x:Name="cbAdv_InstallGfx"
                                              Margin="0,5"
                                              Content="GFX"
                                              Style="{StaticResource MaterialDesignCheckBox}"
                                              ToolTip="Downloads and installs the&#x0a;latest community graphic packs." />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="10,3,0,0">

                                    <!--  Text Box: 'mlc01 Path' | Name: tbAdv_Mlc01Path | Done  -->
                                    <TextBox x:Name="tbAdv_Mlc01Path"
                                             Margin="0,5"
                                             VerticalAlignment="Center"
                                             Style="{StaticResource Filled}"
                                             Text="%cemupath%\mlc01"
                                             ToolTip="Path to Cemu mlc01.&#x0a;This is where your game files are stored. (Or a copy of them.)&#x0a;&#x0a;Ctrl + Double click to browse." />

                                    <!--  Check Box: 'Copy Base Game' | Name: cbAdv_CopyBase | Done  -->
                                    <CheckBox x:Name="cbAdv_CopyBase"
                                              Margin="0,5"
                                              HorizontalAlignment="Stretch"
                                              Content="Copy Base Game"
                                              Style="{StaticResource MaterialDesignCheckBox}"
                                              ToolTip="Copies Botw base game files to&#x0a;the specified mlc01 folder." />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    <Border Margin="0,13,0,0"
                            BorderBrush="{DynamicResource SecondaryHueLightBrush}"
                            BorderThickness="2"
                            CornerRadius="5">
                        <StackPanel Margin="12,6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition MaxWidth="80" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Margin="3,-15,0,133"
                                           Padding="5,0"
                                           HorizontalAlignment="Left"
                                           Background="{DynamicResource PrimaryHueDarkBrush}"
                                           FontSize="14"
                                           Foreground="{DynamicResource SecondaryHueLightBrush}"
                                           Text="Game Files" />
                                <StackPanel Margin="5" VerticalAlignment="Center">
                                    <TextBlock Margin="0,0,0,20" Text="Base:" />
                                    <TextBlock Text="Update:" />
                                    <TextBlock Margin="0,20,0,0" Text="DLC:" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">

                                    <!--  Text Box: 'Base Game Path' | Name: tbAdv_GameBase | Done  -->
                                    <TextBox x:Name="tbAdv_GameBase"
                                             Margin="0,5"
                                             VerticalAlignment="Center"
                                             Style="{StaticResource Filled}"
                                             Text="Base"
                                             ToolTip="Path to Botw's Base game files.&#x0a;Must end in content.&#x0a;&#x0a;Ctrl + Double click to browse." />

                                    <!--  Text Box: 'Update Game Path' | Name: tbAdv_GameDlc | Done  -->
                                    <TextBox x:Name="tbAdv_GameUpdate"
                                             Margin="0,5"
                                             VerticalAlignment="Center"
                                             Style="{StaticResource Filled}"
                                             Text="Update"
                                             ToolTip="Path to Botw's Update files.&#x0a;Must end in content.&#x0a;&#x0a;Ctrl + Double click to browse." />

                                    <!--  Text Box: 'DLC Game Path' | Name: tbAdv_GameUpdate | Done  -->
                                    <TextBox x:Name="tbAdv_GameDlc"
