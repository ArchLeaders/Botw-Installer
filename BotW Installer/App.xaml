<Application x:Class="BotW_Installer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BotW_Installer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <FontFamily x:Key="WindowsBasic">pack://application:,,,/Fonts/#Windowcharacters</FontFamily>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/GlobalOverride.xaml"/>
                <ResourceDictionary Source="Theme/ContextMenuOverride.xaml"/>
                <ResourceDictionary Source="Theme/ComboBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
